{
  "id": "openclaw-sitrep",
  "name": "Situation Report Generator",
  "version": "0.1.0",
  "description": "Aggregates system health, goals, timers, events, and agent activity into a unified situation report (sitrep.json)",
  "author": "Vainplex",
  "license": "MIT",
  "configSchema": {
    "type": "object",
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "outputPath": { "type": "string", "description": "Path to write sitrep.json" },
      "previousPath": { "type": "string", "description": "Path for previous sitrep backup" },
      "intervalMinutes": { "type": "number", "default": 120, "description": "How often to regenerate (minutes)" },
      "collectors": {
        "type": "object",
        "description": "Enable/disable and configure individual collectors"
      }
    }
  }
}
